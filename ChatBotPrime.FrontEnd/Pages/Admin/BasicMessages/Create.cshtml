@page
@model ChatBotPrime.FrontEnd.Pages.Admin.BasicMessages.CreateModel

@{
	ViewData["Title"] = "Create";
	Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>BasicMessage</h4>
<hr />
<div class="row">
	<div class="col-md-4">
		<form method="post" >
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="form-group">
				<label asp-for="BasicMessage.MessageText" class="control-label"></label>
				<input asp-for="BasicMessage.MessageText" class="form-control" />
				<span asp-validation-for="BasicMessage.MessageText" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="BasicMessage.Response" class="control-label"></label>
				<input asp-for="BasicMessage.Response" class="form-control" />
				<span asp-validation-for="BasicMessage.Response" class="text-danger"></span>
			</div>
			<div class="form-group">
				<input type="submit" value="Create" class="btn btn-primary" />
			</div>
		</form>
	</div>
</div>

<div>
	<a asp-page="Index">Back to List</a>
</div>

@section Scripts {
	@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
