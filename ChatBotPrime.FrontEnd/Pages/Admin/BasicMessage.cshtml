@page
@model ChatBotPrime.FrontEnd.Pages.Admin.BasicMessageModel
@{
}
<br />
<div class="container row p-0 m-0">
	<div class="col-10">
		<h2 class="text-info">Messages List</h2>
	</div>
	<div class="col-2">
		<a class="btn btn-info form-control text-white">Create New Message</a>
	</div>
	<div class="col-12 border p-3 mt-3">
		<form method="post">
			@if(Model.BasicMessages.Count()>0)
			{
			<table class="table table-striped border">
				<tr class="table-secondary">
					<th>
						<label asp-for="BasicMessages.FirstOrDefault().MessageText"></label>
					</th>
					<th>
						<label asp-for="BasicMessages.FirstOrDefault().Response"></label>
					</th>
					<th>

					</th>
				</tr>
				@foreach(var item in Model.BasicMessages)
					{
				<tr>
					<td>
						@Html.DisplayFor(m => item.MessageText)
					</td>
					<td>
						@Html.DisplayFor(m => item.Response)
					</td>
					<td>
						<button class="btn btn-danger btn-sm">Delete</button>
						<a class="btn btn-success btn-sm text-white">Edit</a>
					</td>
				</tr>

					}
			</table>
			}
			else
			{
			<p>No messages Available.</p>
			}
		</form>
	</div>
</div>  